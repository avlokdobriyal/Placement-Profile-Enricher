# ============================================================
# Placement Profile Enricher – Environment Variables
# Copy to .env and adjust as needed.
# ============================================================

# Per-platform token-bucket rates (tokens/second)
# Format: platform:rate,platform:rate,...
RATE_LIMITS=leetcode:1,codeforces:0.5,linkedin:0.3,github:1

# Network timeout per request (seconds)
REQUEST_TIMEOUT=15

# Enable Selenium for LinkedIn dynamic image scraping (true/false)
SELENIUM_ENABLED=false

# Maximum upload file size in bytes (default 10 MB)
MAX_FILE_SIZE=10485760

# Streaming thresholds – switch to openpyxl streaming for large files
LARGE_FILE_THRESHOLD_BYTES=5242880
LARGE_FILE_THRESHOLD_CELLS=10000

# Inter-request delay range in milliseconds
INTER_REQUEST_DELAY_MIN=750
INTER_REQUEST_DELAY_MAX=1250

# Retry config
MAX_RETRIES=2
BACKOFF_BASE=2

# Directory for saved LinkedIn profile photos
PHOTOS_DIR=./photos
